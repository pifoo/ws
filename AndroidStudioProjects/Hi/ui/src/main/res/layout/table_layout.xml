<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#f0fffb"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical"
    android:stretchColumns="0,3">
    <!--
    android:collapseColumns="0,2"   隐藏1，3列
    android:stretchColumns="1"  拉伸列   设置第二列为可拉伸列,让该列填满这一行所有的剩余空间
    android:shrinkColumns="1"   收缩列   设置第二列为可收缩列
    android:gravity="center_vertical"   布局中组件 垂直居中
    -->

    <TableRow>
        <TextView />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp" />
        <TextView />
    </TableRow>

    <TableRow>
        <TextView />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密  码:" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp" />
        <TextView />
    </TableRow>

    <TableRow
        android:layout_marginTop="30dp">
        <TextView />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出" />
        <TextView />
    </TableRow>

